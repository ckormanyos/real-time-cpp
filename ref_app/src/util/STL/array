#ifndef ARRAY_2010_02_23
  #define ARRAY_2010_02_23

  #include <algorithm>
  #include <iterator>
  #include <type_traits>
  #include <tuple>

  // Implement most of std::array for compilers that do not yet support it.
  // See ISO/IEC 14882:2011 Chapter 23.3.2.

  namespace std
  {
    template<typename T, std::size_t N>
    class array
    {
    public:
      // Standard container-local type definitions.
      using size_type              = std::size_t;
      using difference_type        = std::ptrdiff_t;
      using value_type             = T;
      using pointer                = T*;
      using const_pointer          = const T*;
      using reference              = T&;
      using const_reference        = const T&;
      using iterator               = pointer;
      using const_iterator         = const_pointer;
      using reverse_iterator       = std::reverse_iterator<iterator>;
      using const_reverse_iterator = std::reverse_iterator<const_iterator>;

      value_type elems[N];

      static constexpr size_type static_size = N;

      constexpr iterator begin() { return elems; }
      constexpr iterator end  () { return elems + N; }

      constexpr const_iterator begin() const { return elems; }
      constexpr const_iterator end  () const { return elems + N; }

      constexpr const_iterator cbegin() const { return elems; }
      constexpr const_iterator cend  () const { return elems + N; }

      constexpr reverse_iterator rbegin() { return reverse_iterator(elems + N); }
      constexpr reverse_iterator rend  () { return reverse_iterator(elems); }

      constexpr const_reverse_iterator rbegin() const { return const_reverse_iterator(elems + N); }
      constexpr const_reverse_iterator rend  () const { return const_reverse_iterator(elems); }

      constexpr const_reverse_iterator crbegin() const { return const_reverse_iterator(elems + N); }
      constexpr const_reverse_iterator crend  () const { return const_reverse_iterator(elems); }

      constexpr reference       operator[](const size_type i)       { return elems[i]; }
      constexpr const_reference operator[](const size_type i) const { return elems[i]; }

      constexpr reference       at(const size_type i)       { return elems[i]; }
      constexpr const_reference at(const size_type i) const { return elems[i]; }

      constexpr reference       front()       { return elems[0U]; }
      constexpr const_reference front() const { return elems[0U]; }

      constexpr reference       back()       { return elems[N - 1U]; }
      constexpr const_reference back() const { return elems[N - 1U]; }

      static constexpr size_type size()     { return N; }
      static constexpr bool empty()         { return false; }
      static constexpr size_type max_size() { return N; }

      template<typename T2>
      constexpr void swap(array<T2, N>& y)
      {
        std::swap_ranges(begin(), end(), y.begin());
      }

      constexpr const_pointer data() const { return elems; }
      constexpr pointer       data()       { return elems; }

      pointer c_array() { return elems; }

      template<typename T2>
      constexpr array& operator=(const array<T2, N>& y)
      {
        std::copy(y.begin(), y.end(), begin());

        return *this;
      }

      constexpr void assign(const value_type& value)
      {
        std::fill_n(elems, N, value);
      }

      constexpr void fill(const value_type& value)
      {
        std::fill_n(elems, N, value);
      }
    };

    template<typename T, size_t N>
    constexpr bool operator==(const array<T, N>& left, const array<T, N>& right)
    {
      return std::equal(left.begin(), left.end(), right.begin());
    }

    template<typename T, size_t N>
    bool operator<(const array<T, N>& left, const array<T, N>& right)
    {
      return std::lexicographical_compare(left.begin(),
                                          left.end(),
                                          right.begin(),
                                          right.end());
    }

    template<typename T, size_t N>
    constexpr bool operator!=(const array<T, N>& left, const array<T, N>& right)
    {
      return (!(left == right));
    }

    template<typename T, size_t N>
    constexpr bool operator>(const array<T, N>& left, const array<T, N>& right)
    {
      return (right < left);
    }

    template<typename T, size_t N>
    constexpr bool operator>=(const array<T, N>& left, const array<T, N>& right)
    {
      return (!(left < right));
    }

    template<typename T, size_t N>
    constexpr bool operator<=(const array<T, N>& left, const array<T, N>& right)
    {
      return (!(right < left));
    }

    template<typename T, size_t N >
    constexpr void swap(array<T, N>& x, array<T, N>& y)
    {
      swap_ranges(x.begin(), x.end(), y.begin());
    }

    template<typename T>
    class tuple_size;

    template<typename T, typename std::size_t N>
    class tuple_size<std::array<T, N> > : public std::integral_constant<std::size_t, N>
    {
    };

    template<typename T>
    constexpr std::size_t tuple_size_v = tuple_size<T>::value;

    template<const std::size_t N, typename T>
    class tuple_element;

    template<const std::size_t I,
             typename T,
             const std::size_t N>
    class tuple_element<I, std::array<T, N> >
    {
      static_assert(I < N, "Sorry, tuple_element index is out of bounds.");

      typedef T type;
    };
  } // namespace std

#endif // ARRAY_2010_02_23
